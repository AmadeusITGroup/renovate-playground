{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "preserve",
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    "lib": [
      "dom",
      "es2022"
    ],
    "isolatedModules": true
  },
  "files": [
    "src/test-setup.ts"
  ],
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
